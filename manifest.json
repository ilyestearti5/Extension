{
  "manifest_version": 3,
  "name": "NettoieWeb Personnalisé",
  "version": "1.0.0",
  "description": "Masquez les éléments indésirables sur les sites web et gardez les pages propres à travers vos visites",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["storage.js", "templates.js", "contentScript.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["selectionOverlay.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Activer/désactiver le mode de sélection d'éléments"
    },
    "undo-last": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Annuler le dernier élément masqué"
    },
    "toggle-rules": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Activer/désactiver toutes les règles pour ce site"
    },
    "hide-videos": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Masquer tous les éléments vidéo"
    },
    "hide-audios": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Masquer tous les éléments audio"
    },
    "hide-images": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Masquer tous les éléments image"
    },
    "hide-buttons": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Masquer tous les éléments bouton"
    }
  }
}
